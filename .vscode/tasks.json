{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe etkin dosyayı derle",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${workspaceFolder}\\src\\**.cpp",
                "-w",
                "-I${workspaceFolder}",
                "-I${workspaceFolder}\\SDL2\\include",
                "-L${workspaceFolder}\\SDL2\\lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Hata Ayıklayıcısı tarafından oluşturulan görev."
        }
    ],
    "version": "2.0.0"
}